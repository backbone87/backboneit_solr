<?xml version="1.0" encoding="UTF-8"?>
<project name="backboneit_multimedia" default="build" basedir=".">
  
	<property name="build.dir" value="build" />
	<property name="build.module" value="${build.dir}/TL_ROOT/system/modules/backboneit_solr" />
	<property name="minjs.dir" value="${build.module}/js" />
	<property name="minjs.keepsrc" value="true" />
	<property name="mincss.dir" value="${build.module}/css" />
	<property name="mincss.keepsrc" value="true" />
		
	<property name="test.dir" value="ct2113" />

	<import file="ext/yui-compressor/yui.xml" />

	<target name="clean">
		<delete dir="${build.dir}" />
		<mkdir dir="${build.dir}/TL_ROOT" />
	</target>
	
	<target name="build" depends="clean">
		<copy todir="${build.dir}/TL_ROOT">
			<fileset dir="TL_ROOT" includes="**/*.php" />
			<filterchain>
				<headfilter lines="-1" skip="1" />
				<concatfilter prepend="publish/license_php.txt" />
			</filterchain>
		</copy>
		<copy todir="${build.dir}/TL_ROOT">
			<fileset dir="TL_ROOT" excludes="**/*.php" />
		</copy>
		
	  	<zip destfile="${build.dir}/backboneit_multimedia.zip">
	  		<zipfileset dir="${build.dir}/TL_ROOT" />
	  	</zip>
	</target>
	
	<target name="test">
		<delete dir="${test.dir}/system/modules/backboneit_solr" />
		<copy todir="${test.dir}/system/modules">
			<fileset dir="TL_ROOT/system/modules/backboneit_solr" />
		</copy>
	</target>
	
</project>